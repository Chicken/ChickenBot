{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "import/extensions": "off",
        "no-param-reassign": "off",
        "consistent-return": "off",
        "no-nested-ternary": "off",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "import/no-unresolved": [
            "error",
            {
                "commonjs": true,
                "caseSensitive": true,
                "ignore": ["config\\.js$"]
            }
        ]
    }
}
